{
  "manifest_version": 2,
 
  "name": "HypeUP",
  "icons": {"16": "icon_16.png",
            "48" : "icon_48.png",
            "128": "icon_128.png"
  },
  "version": "0.1.0",
  "description": "A swaggy chrome extension that prevents online abuse.",

  "browser_action": {
	"default_icon": "icon_16.png",
	"default_popup": "popup.html",
	"default_title": "HackTube"
	},
 
  "content_scripts": [{
    "css": ["styles.css"],
    "js": ["content.js"],
    "matches": ["https://*/*", "http://*/*"]
  }
],

  "permissions": [
          "cookies",
          "*://*.google.com"
        ]

}